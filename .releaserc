{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "conventionalcommits",
      "releaseRules": [
        {"type": "change", "release": "patch"},
        {"type": "deprecate", "release": "patch"},
        {"type": "remove", "release": "patch"},
        {"type": "security", "release": "patch"},
        {"type": "refactor", "release": "patch"}
      ],
      "presetConfig": {
        "types": [
          {"type": "feat", "section": "Features"},
          {"type": "fix", "section": "Bug Fixes"},
          {"type": "perf", "section": "Performance Improvements"},
          {"type": "security", "section": "Security Improvements"},
          {"type": "change", "section": "Changes"},
          {"type": "revert", "section": "Reverts"},
          {"type": "remove", "section": "Removals"},
          {"type": "deprecate", "section": "Deprecations"},
          {"type": "docs", "section": "Documentation", "hidden": true},
          {"type": "style", "section": "Styles", "hidden": true},
          {"type": "chore", "section": "Miscellaneous Chores", "hidden": true},
          {"type": "refactor", "section": "Code Refactoring", "hidden": true},
          {"type": "test", "section": "Tests", "hidden": true},
          {"type": "build", "section": "Build System", "hidden": true},
          {"type": "ci", "section": "Continuous Integration", "hidden": true}
        ]
      }
    }],
    ["@semantic-release/release-notes-generator", {
      "preset": "conventionalcommits",
      "presetConfig": {
        "types": [
          {"type": "feat", "section": "Features"},
          {"type": "fix", "section": "Bug Fixes"},
          {"type": "perf", "section": "Performance Improvements"},
          {"type": "security", "section": "Security Improvements"},
          {"type": "change", "section": "Changes"},
          {"type": "revert", "section": "Reverts"},
          {"type": "remove", "section": "Removals"},
          {"type": "deprecate", "section": "Deprecations"},
          {"type": "docs", "section": "Documentation", "hidden": true},
          {"type": "style", "section": "Styles", "hidden": true},
          {"type": "chore", "section": "Miscellaneous Chores", "hidden": true},
          {"type": "refactor", "section": "Code Refactoring", "hidden": true},
          {"type": "test", "section": "Tests", "hidden": true},
          {"type": "build", "section": "Build System", "hidden": true},
          {"type": "ci", "section": "Continuous Integration", "hidden": true}
        ]
      }
    }],
    "@semantic-release/changelog",
    "@semantic-release/github",
    [
      "@google/semantic-release-replace-plugin", {
        "replacements": [
          {
            "files": ["bot_nanny/__init__.py"],
            "from": "__VERSION__ = \".*\"",
            "to": "__VERSION__ = \"${nextRelease.version}\"",
            "results": [
              {
                "file": "bot_nanny/__init__.py",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    ["@semantic-release/git", {
      "assets": [
        "bot_nanny/*.py",
        "config/config.toml",
        "requirements.txt",
        "*.md",
        "LICENSE"
      ],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }],
    ["@semantic-release/exec", {
      "prepareCmd": "docker build -t gambcl/bot_nanny ."
    }],
    ["@semantic-release-plus/docker", {
      "name": "gambcl/bot_nanny"
    }]
  ]
}
